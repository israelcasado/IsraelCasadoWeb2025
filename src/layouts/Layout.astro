---
import "../styles/global.css";
---

<style>
	html,
	body {
			margin: 0;
			width: 100%;
			height: 100%;
	}
</style>

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Israel Casado</title>
    </head>
    <body class="bg-black text-white">
        <header class="flex justify-between items-center p-4 bg-white/10 backdrop-blur-md border-b border-white/20">
            <h1 class="text-xl font-bold">Israel Casado</h1>
            <div class="flex gap-4">
                <a href="https://facebook.com" target="_blank" rel="noopener noreferrer"
                    class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition-transform transform hover:scale-110">
                    <img src="/icons/facebook.svg" alt="Facebook" class="w-5 h-5 invert">
                </a>
                <a href="https://twitter.com" target="_blank" rel="noopener noreferrer"
                    class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition-transform transform hover:scale-110">
                    <img src="/icons/twitter.svg" alt="Twitter" class="w-5 h-5 invert">
                </a>
                <a href="https://instagram.com" target="_blank" rel="noopener noreferrer"
                    class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition-transform transform hover:scale-110">
                    <img src="/icons/instagram.svg" alt="Instagram" class="w-5 h-5 invert">
                </a>
            </div>
        </header>
        <slot />
    </body>
</html>



