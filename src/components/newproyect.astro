---
const { title, description, imageUrl, link } = Astro.props;
---

<div class="p-4 md:w-1/3 sm:mb-0 mb-4">
  <div class="rounded-lg overflow-hidden shadow-lg">
    <img alt="content" class="object-cover object-center h-48 w-full" src={imageUrl}>
    <div class="p-6 bg-gray-800">
      <h2 class="text-lg font-medium title-font text-white mb-2">{title}</h2>
      <p class="leading-relaxed text-base text-gray-400 mb-4">{description}</p>
      <a href={link} target="_blank" rel="noopener noreferrer" class="text-indigo-400 inline-flex items-center">Visita!
        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</div>